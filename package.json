{
  "name": "wallpaper-fire",
  "version": "1.1.0",
  "private": true,
  "description": "Live wallpaper app to use with linux distros",
  "author": {
    "name": "Henrique de Oliveira",
    "email": "henrique@htron-dev.com",
    "url": "https://htron-dev.com"
  },
  "build": {
    "target": "appimage",
    "appId": "com.htron-dev.wallpaper-fire",
    "productName": "Wallpaper fire",
    "directories": {
      "buildResources": "dist/app/resources",
      "output": "build"
    },
    "linux": {
      "icon": "./dist/app/resources/icons",
      "target": ["Appimage"]
    }
  },
  "main": "dist/app/index.js",
  "license": "MIT",
  "repository": "https://github.com/htron-dev/wallpaper-fire.git",
  "scripts": {
    "start": "npm run electron",
    "dev": "export NODE_ENV=development && npm run build:app && npm run electron",
    "serve": "vue-cli-service serve",
    "electron": "electron . ",
    "lint:fix": "vue-cli-service lint --fix",
    "lint": "vue-cli-service lint",
    "test": "npm run test:unit && npm run lint",
    "test:unit": "vue-cli-service test:unit --include ./src/__tests__/setup.ts --recursive ./src/__tests__",
    "test:watch": "vue-cli-service test:unit -w --include ./src/__tests__/setup.ts --recursive ./src/__tests__",
    "clean": "rm -rf build dist",
    "build": "vue-cli-service build && tsc -b ./app && cp -r ./app/resources ./dist/app/resources",
    "build:app": "tsc -b ./app && cp -r ./app/resources ./dist/app/resources",
    "builder": "electron-builder",
    "deploy": "npm run clean && npm run build && npm run builder"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "core-js": "^3.6.4",
    "lodash": "^4.17.15",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "roboto-fontface": "*",
    "vue": "^2.6.10",
    "vue-router": "^3.1.5",
    "vue-the-mask": "^0.11.1",
    "vuetify": "^2.2.14",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@mdi/font": "^4.9.95",
    "@types/chai": "^4.2.9",
    "@types/faker": "^4.1.9",
    "@types/lodash": "^4.14.149",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^7.0.1",
    "@types/node": "^10.17.16",
    "@types/sinon": "^7.5.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/cli-plugin-babel": "^4.2.2",
    "@vue/cli-plugin-eslint": "^4.2.2",
    "@vue/cli-plugin-router": "^4.2.2",
    "@vue/cli-plugin-typescript": "^4.2.2",
    "@vue/cli-plugin-unit-mocha": "^4.2.2",
    "@vue/cli-plugin-vuex": "^4.2.2",
    "@vue/cli-service": "^4.2.2",
    "@vue/composition-api": "^0.4.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.0.1",
    "@vue/test-utils": "^1.0.0-beta.31",
    "canvas": "^2.6.1",
    "chai": "^4.1.2",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.1",
    "faker": "^4.1.0",
    "jsdom": "^16.2.0",
    "jsdom-global": "^3.0.2",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "sinon": "^9.0.0",
    "typescript": "^3.8.2",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-template-compiler": "^2.6.10"
  }
}
