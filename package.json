{
  "name": "wallpaper-fire",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "main": "electron.js",
  "repository": "https://github.com/hawk-developments/wallpaper-fire.git",
  "build": {
    "target": "appimage",
    "appId": "com.htron-dev.wallpaper-fire",
    "productName": "Wallpaper fire",
    "directories":{
      "buildResources": "resources",
      "output": "build"
    },
    "linux":{
      "icon": "./resources/icons"
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "export NODE_ENV=development && npm run serve & npm run electron",
    "serve": "vue-cli-service serve",
    "electron": "electron . ",
    "build": "vue-cli-service build",
    "deploy": "npm run clean && npm run build && npm run builder",
    "builder": "electron-builder",
    "clean": "rm -rf build dist",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "lint:fix": "vue-cli-service lint --fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "@mdi/font": "^3.6.95",
    "@vue/composition-api": "^0.3.4",
    "core-js": "^3.6.4",
    "lodash": "^4.17.15",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "roboto-fontface": "*",
    "vue": "^2.6.10",
    "vue-router": "^3.1.5",
    "vue-the-mask": "^0.11.1",
    "vuetify": "^2.2.11",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "electron": "^7.1.11",
    "@types/chai": "^4.2.8",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.4",
    "@vue/cli-plugin-babel": "^4.2.2",
    "@vue/cli-plugin-eslint": "^4.2.2",
    "@vue/cli-plugin-router": "^4.2.2",
    "@vue/cli-plugin-typescript": "^4.2.2",
    "@vue/cli-plugin-unit-mocha": "^4.2.2",
    "@vue/cli-plugin-vuex": "^4.2.2",
    "@vue/cli-service": "^4.2.2",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "chai": "^4.1.2",
    "electron-builder": "^22.3.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "typescript": "^3.7.5",
    "vue-cli-plugin-vuetify": "^2.0.4",
    "vue-template-compiler": "^2.6.10"
  }
}
